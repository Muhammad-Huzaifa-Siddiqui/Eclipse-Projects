//		String str2 =  in.substring(in.indexOf(".")+1, in.indexOf("."));
//		String str3 =  in.substring(in.indexOf(".")+1, in.length()-1);
//		System.out.println(str+" "+str1+" "+str2+" "+str3);
		
		
	}
}
